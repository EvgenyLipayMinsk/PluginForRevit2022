<Window x:Class="PluginForRevit2022.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PluginForRevit2022"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dgToRemoveList" SelectionChanged="dgToRemoveList_SelectionChanged" Grid.Row="0" Margin="828,16,-828,16" Grid.RowSpan="2">
            <DataGridTextColumn Header="Parameters Name" Width="180"/>
            <DataGridCheckBoxColumn Header="Remove" Width="80" IsThreeState="False"/>
        </DataGrid>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Margin="0,0,0,5" Padding="5" Width="60" Click="Button_Click_OK">OK</Button>
            <Button Margin="5,0,5,5" Padding="5" Width="60" Click="Button_Click_Cancel">Cancel</Button>
        </StackPanel>
           
    </Grid>
</Window>
